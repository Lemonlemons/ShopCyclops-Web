<div class="container">
  <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="navbar-header">
      <%= link_to image_tag("resized_white_logo2.png", class:"navbar-brand"), streams_path %>
    </div>
  </nav>

  <div class="container">
    <div class="col-md-5">

      <div class="row">
        <h1>Log in</h1>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row"><%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class:"chatstyle" %></div>

        <div class="row"><%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off", class:"chatstyle" %></div>

        <% if devise_mapping.rememberable? -%>
          <div class="row"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
        <% end -%>

        <div class="row"><%= f.submit "Log in", class:"btn btn-warning btn-lg" %></div>
      <% end %>

      <div class="row">
        <%= render "users/shared/links" %>
      </div>
    </div>
  </div>
</div>

<%= render "shared/filledfooter" %>
